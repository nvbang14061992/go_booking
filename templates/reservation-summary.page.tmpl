{{template "base" .}}
{{define "content"}}
<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-5">Reservation Summary</h1>
      <hr />

      <table class="table table-striped">
        <thread> </thread>
        <tbody>
          <tr>
            <td>Name</td>
            <td>{{.Reservation.Name}}</td>
          </tr>
          <tr>
            <td>Email</td>
            <td>{{.Reservation.Email}}</td>
          </tr>
          <tr>
            <td>Phone</td>
            <td>{{.Reservation.Phone}}</td>
          </tr>
          <!-- <tr>
            <td>Check-In Date</td>
            <td>{{.Reservation.CheckIn}}</td>
          </tr> -->
        </tbody>
      </table>
    </div>
  </div>
</div>
{{ end }}
